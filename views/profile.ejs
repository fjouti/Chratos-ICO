<% include ./partials/header %>

<h1><%= title %></h1>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label class="control-label col-sm-3 required">Username</label>
            <div class="col-sm-9">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
                    <input class="form-control" id="username" value="<%= user.username %>" type="text" readonly="readonly" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3 required">Full Name</label>
            <div class="col-sm-9">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa address-card-o" aria-hidden="true"></i></span>
                    <input class="form-control" id="full_name" type="text" value="<%= user.full_name %>" required />
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3 required">E-Mail</label>
            <div class="col-sm-9">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-at" aria-hidden="true"></i></span>
                    <input class="form-control" id="email" value="<%= user.email %>" type="text" name="email" required />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3 required">Referred</label>
            <div class="col-sm-9">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-link" aria-hidden="true"></i></span>
                    <input class="form-control" value="<%= user.referred %>" type="text" readonly="readonly" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3 required">Referral URL</label>
            <div class="col-sm-9">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-external-link" aria-hidden="true"></i></span>
                    <input class="form-control" value="<%= user.referralUrl %>" type="text" readonly="readonly" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3 required">Wallet</label>
            <div class="col-sm-9">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-btc" aria-hidden="true"></i></span>
                    <input class="form-control" id="wallet" value="<%= user.wallet %>" type="text" readonly="readonly" />
                    <span class="input-group-btn">
                        <button id="create-wallet" class="btn btn-default" type="button">Update</button>
                    </span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3 required">Balance</label>
            <div class="col-sm-9">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-money" aria-hidden="true"></i></span>
                    <input class="form-control" id="balance" value="" type="text" readonly="readonly" />
                    <span class="input-group-btn">
                        <button id="get-balance" class="btn btn-default" type="button">Update</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ./partials/footer %>